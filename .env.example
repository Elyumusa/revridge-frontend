# ================================
# REVRIDGE FRONTEND - ENVIRONMENT VARIABLES
# ================================
# Copy this file to .env for local development
# Never commit .env to version control!

# ================================
# BACKEND API CONFIGURATION
# ================================

# Main backend URL (Django API)
# Development: http://localhost:8000
# Production: https://your-backend-domain.com
VITE_REVRIDGE_BACKEND_URL=http://localhost:8000

# API base URL (for axios instance)
VITE_API_URL=http://localhost:8000/api

# Trading bot API URL
VITE_TRADING_BOT_URL=http://localhost:8000

# ================================
# OPTIONAL CONFIGURATION
# ================================

# Enable/disable features
# VITE_ENABLE_TRADING_BOT=true
# VITE_ENABLE_STOCK_PREDICTOR=true

# Analytics (Google Analytics, etc.)
# VITE_GA_TRACKING_ID=UA-XXXXXXXXX-X
